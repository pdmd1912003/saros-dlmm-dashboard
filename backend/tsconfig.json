{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",  // ✅ Thay "Node" bằng "Bundler"
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"],
      "sdk/*": ["../sdk/*"]
    },
    "allowImportingTsExtensions": false  // ✅ Bắt buộc không dùng .ts đuôi
  },
  "include": ["src/**/*", "sdk/client.ts", "sdk/connection-manager.ts"]
}
